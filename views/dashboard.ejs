<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f5f5f5;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .dashboard {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: center;
      margin-bottom: 30px;
    }

    .card {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      min-width: 200px;
      text-align: center;
    }

    .amount {
      font-size: 1.8rem;
      margin-top: 10px;
      color: #2c3e50;
    }

    .category-summary {
      max-width: 500px;
      margin: 0 auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .category-summary ul {
      list-style: none;
      padding: 0;
    }

    .category-summary li {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid #eee;
    }
  </style>
</head>
<body>
  <h1>Dashboard</h1>

  <div class="dashboard">
    <div class="card">
      <div>Total Expenses</div>
      <div class="amount">₹<%= totalExpenses %></div>
    </div>
    <div class="card">
      <div>Transactions</div>
      <div class="amount"><%= transactionCount %></div>
    </div>
  </div>

  <div class="category-summary">
    <h3>Category Breakdown</h3>
    <ul>
      <% for (let category in categorySummary) { %>
        <li>
          <span><%= category %></span>
          <span>₹<%= categorySummary[category] %></span>
        </li>
      <% } %>
    </ul>
  </div>
</body>
</html>